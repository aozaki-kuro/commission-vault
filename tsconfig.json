{
  "extends": "astro/tsconfigs/base",
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "types": ["astro/client"],
    "baseUrl": ".",
    "paths": {
      "#components/*": ["app/components/*"],
      "#images/*": ["public/images/*"],
      "#commission/*": ["components/commission/*"],
      "#data/*": ["data/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx", "**/*.astro"],
  "exclude": ["node_modules"]
}
